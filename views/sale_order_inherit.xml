<odoo>
    <record id="view_order_form_inherit_with_line_form" model="ir.ui.view">
        <field name="name">sale.order.form.line.chatter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="mode">form</attribute>
                <attribute name="context">{'form_view_ref': 'your_module.view_sale_order_line_form_with_chatter'}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
