<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom form view for sale.order.line with chatter -->
    <record id="view_sale_order_line_form_with_chatter" model="ir.ui.view">
        <field name="name">sale.order.line.form.chatter</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="Sale Order Line">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="price_unit"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Modify sale.order to use this form for order_line -->
    <record id="view_order_form_inherit_with_line_form" model="ir.ui.view">
        <field name="name">sale.order.form.line.chatter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="mode">form</attribute>
                <attribute name="context">
                    {'form_view_ref': 'chatters.view_sale_order_line_form_with_chatter'}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
